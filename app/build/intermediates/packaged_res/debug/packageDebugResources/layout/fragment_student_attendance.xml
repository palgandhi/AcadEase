<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".fragments.student.StudentAttendanceFragment">

    <include
        android:id="@+id/attendance_header"
        layout="@layout/legacy_app_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/attendance_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:indicatorSize="48dp"
        app:trackThickness="4dp"/>

    <TextView
        android:id="@+id/attendance_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="No attendance yet"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attendance_courses_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/attendance_header"
        android:padding="@dimen/ae_card_padding"
        tools:listitem="@layout/item_course_attendance_card"/>

</RelativeLayout>
