<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".fragments.student.StudentResultsFragment">

    <include
        android:id="@+id/results_header"
        layout="@layout/legacy_app_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/results_heading_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/results_header"
        android:orientation="horizontal"
        android:padding="@dimen/ae_card_padding"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Results"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/sgpa_badge_text"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:text="0.00"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_circle_primary"
            tools:text="8.12"/>
    </LinearLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/results_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:indicatorSize="48dp"
        app:trackThickness="4dp"/>

    <TextView
        android:id="@+id/results_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="No results yet"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/results_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/results_heading_row"
        android:padding="@dimen/ae_card_padding"
        tools:listitem="@layout/item_result_row"/>

</RelativeLayout>
