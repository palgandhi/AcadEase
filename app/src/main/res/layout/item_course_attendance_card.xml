<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ae_space_lg"
    app:cardCornerRadius="@dimen/ae_card_radius"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/ae_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/ae_card_padding">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/att_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/ae_text_title"
                android:textStyle="bold"
                tools:text="CS101 - Data Structures"/>

            <TextView
                android:id="@+id/att_course_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/ae_text_body"
                tools:text="12/14 sessions"/>
        </LinearLayout>

        <TextView
            android:id="@+id/att_course_percent"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_circle_primary"
            tools:text="86%"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
