<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/card_announcement_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/card_announcement_category"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="[Assignment Due Date Extended]"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_announcement_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/category_tag_background"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="2dp"
                android:text="ACADEMIC"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:backgroundTint="?attr/colorAccent" />
        </RelativeLayout>

        <TextView
            android:id="@+id/card_announcement_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="The due date for the CS101 final project has been moved to November 15th to accommodate feedback sessions. Check the course page for details..."
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/card_announcement_target"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Target: Students, Faculty"
                android:textSize="12sp"
                android:textColor="@color/design_default_color_secondary"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/card_announcement_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hour ago"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>