<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".fragments.student.StudentAssignmentsFragment">

    <include
        android:id="@+id/assign_header"
        layout="@layout/legacy_app_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/assign_summary_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/assign_header"
        android:orientation="horizontal"
        android:padding="@dimen/ae_card_padding"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/assignments_counters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending: 0   Completed: 0   Overdue: 0"
            android:textColor="@color/text_dark"
            android:textStyle="bold"/>
    </LinearLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/assignments_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:indicatorSize="48dp"
        app:trackThickness="4dp"/>

    <TextView
        android:id="@+id/assignments_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="No assignments"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/assignments_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/assign_summary_row"
        android:padding="@dimen/ae_card_padding"
        tools:listitem="@layout/item_student_assignment_row"/>

</RelativeLayout>
