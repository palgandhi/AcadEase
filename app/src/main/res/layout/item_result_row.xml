<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ae_space_md"
    app:cardCornerRadius="@dimen/ae_card_radius"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/ae_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/ae_card_padding">

        <TextView
            android:id="@+id/col_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:textSize="@dimen/ae_text_body"
            tools:text="CS101"/>

        <TextView
            android:id="@+id/col_exam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/ae_text_body"
            tools:text="Mid"/>

        <TextView
            android:id="@+id/col_marks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/ae_text_body"
            tools:text="24/30"/>

        <TextView
            android:id="@+id/col_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/ae_space_sm"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:textSize="@dimen/ae_text_body"
            tools:text="80.0%"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
